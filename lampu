package tugas;

class LampuKu{
    boolean nyala;

    void nyalakanLampu(){
        nyala = true;
        System.out.println("Apakah lampu menyala? "+ nyala);
    }

    void matikanLampu(){
        nyala = false;
        System.out.println("Apakah lampu menyala? "+ nyala);
    }
}

public class Lampu {
    public static void main(String[] args){
        LampuKu kondisi = new LampuKu();
        kondisi.nyalakanLampu();
        kondisi.matikanLampu();
    }
}
